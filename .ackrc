
# ignore python virtual environments
--ignore-dir=env

# ignore bower install directory
--ignore-dir=vendor

# ignore pycharm files
--ignore-dir=.idea

# ignore collected static files
--ignore-dir=collected_static

--type-add=css=.less,.scss,.sass
--type-add=ruby=.haml
--type-set=coffee=.coffee
--type-set=markdown=.md,.markdown
--type-set=json=.json
